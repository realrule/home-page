          img.cardImg(src='./images/智慧工件托板模組-step1.png' alt='智慧工件托板模組-step1')
        img(src='./images/arrow-point-to-right.svg' width='30' height='30')
        .card.sm
          .cardName 基準座標
          img.cardImg(src='./images/智慧工件托板模組-step2.png' alt='智慧工件托板模組-step2')
        img(src='./images/arrow-point-to-right.svg' width='30' height='30')
        .card.sm
          .cardName 編號
          img.cardImg(src='./images/智慧工件托板模組-step3.png' alt='智慧工件托板模組-step3')
        img(src='./images/arrow-point-to-right.svg' width='30' height='30')
        .card.sm
